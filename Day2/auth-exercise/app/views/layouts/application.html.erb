<!DOCTYPE html>
<html>
<head>
  <title>AuthExercise</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <h1>Hi <%= current_user.username %></h1>
  <% else %>
    <%= link_to "Login", "/login" %><br>
    <%= link_to "Logout", "/logout", method: :destroy %><br>
  <% end %>
  <%= render 'partials/header' %>
  <%= render 'partials/messages' %>
  <%= yield %>

</body>
</html>
